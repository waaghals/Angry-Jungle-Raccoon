@model BarometerDomain.Model.ProjectPeriod

@ViewBag.Beschrijving
<div id="tabs">
    <ul>
        @{
            int i = 1;
            foreach (string s in ViewBag.studenten)
            {
            <li><a href="#tabs-@i">@s</a></li>
                i++;
            }
        }
        @{ BarometerDomain.Model.Student myStudent = (TempData["currentStudent"] as BarometerDomain.Model.Student)}
        
    </ul>
    @{
        i = 1;
        foreach (string s in ViewBag.Studenten)
        {
        <div id="tabs-@i" class="tab">
            @using (@Html.BeginForm("evaluate", "Project", FormMethod.Post))
            {
                    @Html.Hidden("forStudent", i)
                <h1>Beoordeel @s</h1>
                <div class="tabcontainer">
                    <div class="competenties">
                        <h3>Competenties</h3>
                        @{
                    int index = 0;
                    
                foreach (string skill in ViewBag.skills)
                {
                    
                            <div class="rating">
                                @skill
                                @*<input type="text" name="skill-@skill" class="cijferbox">*@
                                @Html.EditorFor(model => model.Evaluation[index].Grade)
                              
                            </div>
                    index++;
                }
                        }
                    </div>
                    <div class="opmerkingen">
                        <h3>Opmerkingen</h3>
                        <textarea name="opmerkingvak" cols="1" rows="1" class="opmerkingbox"></textarea>
                    </div>
                    <div class="buttonbox">
                        <input class="button" type="submit" name="opslaan" value="Opslaan" />
                        <input class="button" type="submit" name="annuleren" value="Annuleren" />
                        @*<button class="button">Opslaan</button>
                        <button class="button">Annuleren</button>*@
                    </div>
                </div>
            }
        </div>
            i++;
        }
    }
</div>

